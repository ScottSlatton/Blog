<h1>THE FRONT PAGE<h1>

<h2><%= link_to "Author New Article", new_article_path%>  </h2>


<% @articles.each do |article| %>
    <div>
     <h2><%=article.title%></h2>
     <p><%=article.text%></p>

     <h4><%= link_to 'Show', article_path(article) %></h4>
     <h4><%= link_to 'Edit', edit_article_path(article) %></h4>
     <h4><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </h4>
    </div>
<%end%>

